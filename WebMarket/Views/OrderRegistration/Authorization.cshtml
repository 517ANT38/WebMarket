@model WebMarket.Models.EmailPassword

@{
    ViewBag.Title = "Авторизация";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
   
<title>ViewBag.Title</title>
</head>
<body>
    <div>
        @using (Html.BeginForm())
        {
            @Html.ValidationMessageFor(x => x.Email)
            <p>Ваш email: @Html.TextBoxFor(x => x.Email)</p>
            @Html.ValidationMessageFor(x => x.Password)
            <p>@Html.LabelFor(x => x.Password): @Html.PasswordFor(x => x.Password)</p>
            <input type="submit" value="Войти" />
        }
        <p>@Html.ActionLink("Зарегистрироваться", "Registration", "OrderRegistration")</p>
    </div>
    <script src="~/Scripts/script3.js"></script>
    
</body>
</html>
